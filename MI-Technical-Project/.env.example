# ======================================
# Environment Configuration Template
# ======================================
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control

# ======================================
# Google Cloud Platform Configuration
# ======================================

# Your GCP Project ID (required)
GCP_PROJECT_ID=your-gcp-project-id

# BigQuery Dataset and Table names
BQ_DATASET=crypto_analytics
BQ_TABLE=crypto_prices

# Path to your GCP service account JSON key file
# Download from: GCP Console > IAM & Admin > Service Accounts
# Required permissions: BigQuery Data Editor, BigQuery Job User
GCP_CREDENTIALS_PATH=/path/to/your/service-account-key.json

# ======================================
# CoinGecko API Configuration
# ======================================

# CoinGecko API Key (optional for free tier)
# Get yours at: https://www.coingecko.com/en/api
# Leave empty to use free tier (rate limited)
COINGECKO_API_KEY=

# ======================================
# Data Configuration
# ======================================

# Comma-separated list of cryptocurrency IDs to track
# Find IDs at: https://api.coingecko.com/api/v3/coins/list
CRYPTO_IDS=bitcoin,ethereum,cardano,solana,polkadot

# ======================================
# Data Quality Thresholds
# ======================================

# Minimum number of records required for successful pipeline run
MIN_RECORDS_THRESHOLD=1

# Maximum percentage of null values allowed in critical columns
MAX_NULL_PERCENTAGE=10.0

# ======================================
# Logging Configuration
# ======================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
